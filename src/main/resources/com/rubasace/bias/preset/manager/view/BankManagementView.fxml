<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rubasace.bias.preset.manager.view.BankManagementView">
	<children>
		<HBox alignment="BASELINE_LEFT" spacing="10.0" VBox.vgrow="NEVER">
			<children>
				<Label text="%filechooser.biasfx"/>
				<TextField fx:id="biasDirectoryTextField" editable="false" HBox.hgrow="ALWAYS"/>
				<Button mnemonicParsing="false" onAction="#browseBiasDirectoryHandler" text="%common.browse"/>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</VBox.margin>
		</HBox>
		<HBox alignment="BASELINE_LEFT" spacing="10.0" VBox.vgrow="NEVER">
			<children>
				<Label text="%filechooser.presets"/>
				<TextField fx:id="presetsDirectoryTextField" editable="false" HBox.hgrow="ALWAYS"/>
				<Button mnemonicParsing="false" onAction="#browsePresetDirectoryHandler" text="%common.browse"/>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</VBox.margin>
		</HBox>
		<ListView fx:id="bankList" editable="true" prefHeight="200.0" prefWidth="200.0">
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</VBox.margin>
		</ListView>
		<HBox alignment="BASELINE_LEFT" spacing="10.0">
			<children>
				<TextField fx:id="bankNameTextField" onAction="#addBankHandler" HBox.hgrow="ALWAYS"/>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0"/>
			</VBox.margin>
		</HBox>
		<HBox alignment="BASELINE_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
			<children>
				<Button mnemonicParsing="false" onAction="#importHandler" text="%import"/>
			</children>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</VBox.margin>
		</HBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
</VBox>
